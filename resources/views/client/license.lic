<?php
require 'LicenseValidator.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_FILES['license_file'])) {
    try {
        $validator = new LicenseValidator();
        $validator->validateFromFile($_FILES['license_file']['tmp_name']);
        echo "Licença válida! Sistema liberado.";
    } catch (Exception $e) {
        echo $e->getMessage();
    }
} else {
    die("Nenhuma licença enviada.");
}
